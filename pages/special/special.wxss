/* pages/special/special.wxss */

.wrap {
  padding-bottom: 98rpx;
}

.content image {
  width: 100%;
  min-height: 800rpx;
}

.reserve {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  height: 98rpx;
  border-top: 2rpx solid #e6e6e6;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.reserve .left {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.reserve .left .original {
  width: 150rpx;
  text-align: center;
  color: rgba(204, 204, 204, 1);
  font-size: 20rpx;
  position: relative;
}

.reserve .left .original::after {
  position: absolute;
  display: block;
  content: '';
  width: 100%;
  height: 2rpx;
  background: rgba(204, 204, 204, 1);
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  transform: scaleY(0.5);
}

.reserve .deplete {
  color: rgba(51, 51, 51, 1);
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.reserve .deplete text {
  font-size: 36rpx;
  color: rgba(245, 54, 54, 1);
}

.reserve .btn {
  width: 300rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-radius: 37rpx;
  color: #fff;
  text-align: center;
  /* margin-top: 10rpx; */
  background: linear-gradient(rgba(250, 195, 85, 1) 0%, rgba(250, 174, 75, 1) 100%);
  box-shadow: 0px -2rpx 2rpx 0px rgba(160, 96, 10, 0.2) inset,
                0px 2rpx 2rpx 0px rgba(255, 255, 255, 0.5) inset,
                0px 4rpx 4rpx 0px rgba(230, 155, 69, 0.5);
}

.reserve .btn.active{
  background: linear-gradient(rgba(163, 163, 163, 1) 0%, rgba(138, 138, 138, 1) 100%);
  box-shadow: 0px -2rpx 2rpx 0px rgba(160, 96, 10, 0.2) inset,
              0px 2rpx 2rpx 0px rgba(255, 255, 255, 0.5) inset,
              0px 4rpx 4rpx 0px rgba(138, 138, 138, 0.5);
}
