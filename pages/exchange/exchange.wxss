/* pages/ exchange/exchange.wxss */

page {
  background: rgba(253, 228, 178, 1);
}

.exchange {
  box-sizing: border-box;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  padding-bottom: 98rpx;
}

.exchange .convert {
  flex: 1;
  background: #fde4b2;
  box-sizing: border-box;
  padding-top: 51rpx;
}

.convert .icon {
  width: 167rpx;
  height: 70rpx;
  margin-left: 90rpx;
}

.convert .ipt {
  width: 630rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(255, 180, 81, 1);
  box-shadow: 0rpx 1rpx 0rpx 0rpx rgba(224, 187, 130, 0.3);
  border-radius: 12rpx;
  margin: 0 auto;
  color: #cdcdcd;
  font-size: 30rpx;
  text-align: center;
}

.convert .explain {
  font-size: 30rpx;
  color: #333;
}

.explain .sm {
  margin: 40rpx 96rpx 0 96rpx;
  position: relative;
}

.explain .sm::before{
  position: absolute;
  display: block;
  content: '';
  width:6rpx;
height:28rpx;
background:rgba(255,180,81,1);
border-radius:3rpx;
left: -26rpx;
top: 0;
bottom: 0;
margin: auto;
}

.convert .explain text {
  display: block;
  font-size: 24rpx;
  color: #837863;
  margin: 20rpx 81rpx 0 81rpx;
  line-height: 1.5;
}

.convert .explain text.example{
  margin-bottom: 66rpx;
}

.exchange .img {
  width: 750rpx;
  height: 690rpx;
}

.btn {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  position: fixed;
  bottom: 0;
  height: 98rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.btn.isIpx{
  padding-bottom: 68rpx;
}

.btn .btndh {
  width: 300rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-radius: 37rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  box-sizing: border-box;
  margin-right: 30rpx;
  background: linear-gradient(rgba(250, 195, 85, 1) 0%, rgba(250, 174, 75, 1) 100%);
  box-shadow: 0px -2rpx 2rpx 0px rgba(160, 96, 10, 0.2) inset,
                0px 2rpx 2rpx 0px rgba(255, 255, 255, 0.5) inset,
                0px 4rpx 4rpx 0px rgba(230, 155, 69, 0.5);
}

/* modal */

.modal {
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
}

.modal .succ {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 15%;
}

.modal .succ image {
  width: 574rpx;
  height: 498rpx;
}

.modal .succ .sure {
  width: 300rpx;
  height: 70rpx;
  border: 2rpx solid rgba(255, 180, 81, 1);
  border-radius: 35rpx;
  font-size: 36rpx;
  font-family: NotoSansHans-Medium;
  font-weight: 500;
  color: rgba(255, 180, 81, 1);
  text-align: center;
  line-height: 70rpx;
  margin-top: 100rpx;
}
