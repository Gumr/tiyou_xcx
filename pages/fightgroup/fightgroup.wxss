/* pages/fightgroup/fightgroup.wxss */

page {
  background: #fff;
}

.arc {
  width: 750rpx;
  height: 380rpx;
  margin: 0 auto;
  position: relative;
}

.arc .radian {
  width: 1500rpx;
  height: 290rpx;
  position: absolute;
  left: -375rpx;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: #ffb451;
  z-index: -1;
}

.info .head {
  box-sizing: border-box;
  padding: 30rpx 0 0 60rpx;
  display: flex;
  align-items: center;
}

.info .head image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #fff;
  margin: 0 30rpx 0 0;
}

.info .head .title {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}

.info .head .title .desc1 {
  color: #fff;
  margin-bottom: 10rpx;
}

.info .head .title .desc2 {
  display: flex;
}

.info .head .title .desc2 .name {
  max-width: 170rpx;
  color: #333;
  border-bottom: 1rpx solid #fff;
  padding: 0 0 0rpx 0;
  margin-right: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 1.1;
}

.info .head .title .desc2 .extra {
  color: #fff;
}

/* 课程信息 */

.courseinfo {
  width: 690rpx;
  height: 220rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin: 30rpx auto 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 39rpx 0 30rpx;
  position: relative;
}

.courseinfo .cover {
  width: 200rpx;
  height: 160rpx;
  border-radius: 6rpx;
  margin-right: 29rpx;
  background: #ccc;
}

.courseinfo .related {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.courseinfo .related .name {
  font-size: 30rpx;
  font-family: NotoSansHans-Medium;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 19rpx;
}

.courseinfo .related .time {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.courseinfo .related .time .timeicon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 15rpx;
}

.courseinfo .related .time .timeinfo {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.courseinfo .related .place {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.courseinfo .related .place .left {
  display: flex;
}

.courseinfo .related .place .left .placeicon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 15rpx;
}

.courseinfo .related .place .left .placeinfo {
  display: flex;
  flex-direction: column;
}

.courseinfo .related .place .left .placeinfo .store {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 9rpx;
}

.courseinfo .related .place .left .placeinfo .detail {
  color: #666;
  font-size: 20rpx;
}

.courseinfo .related .place .arrow {
  width: 17rpx;
  height: 30rpx;
}

.courseinfo .status {
  position: absolute;
  width: 140rpx;
  height: 34rpx;
  background: rgba(255, 180, 81, 1);
  border-radius: 17rpx 0rpx 0rpx 17rpx;
  font-size: 22rpx;
  font-family: NotoSansHans-Regular;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 34rpx;
  right: 2rpx;
  top: 34rpx;
}

/* 进度条 */

.progre {
  width: 630rpx;
  margin-top: 60rpx;
  margin: 60rpx auto 0;
  position: relative;
}

.situation {
  font-size: 20rpx;
  color: #333;
  font-weight: 400;
  margin-bottom: 30rpx;
}

.botinfo {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 20rpx;
  color: #666;
  margin-top: 12rpx;
}

.botinfo text {
  color: #ffb451;
}

progress {
  position: relative;
}

.schedule {
  position: absolute;
  font-size: 20rpx;
  color: #ffb451;
  left: 0;
  bottom: 18rpx;
  transition: all 3s ease;
}

/* 结束 */

.group {
  display: flex;
  flex-wrap: wrap;
  width: 630rpx;
  margin: 40rpx 0 0 60rpx;
}

.group .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 2rpx solid rgba(230, 230, 230, 1);
  margin: 0 10rpx 10rpx 0;
}

.group .avatar image {
  border-radius: 50%;
}

.group .avatar:nth-of-type(8) {
  margin-right: 0;
}

.group .avatar image {
  width: 100%;
  height: 100%;
}

.explain {
  margin: 88rpx 0 0 60rpx;
}

.explain text {
  color: #999;
  font-size: 22rpx;
  line-height: 1.5;
  font-family: NotoSansHans-Light;
}

/* 预约 */

.bot {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bot.isIpx {
  padding: 0 0 68rpx 0;
}

.bot .reserve {
  width: 690rpx;
  height: 74rpx;
  background: linear-gradient(0deg, rgba(250, 174, 75, 1) 0%, rgba(250, 195, 85, 1) 100%);
  box-shadow: 0rpx -1rpx 0rpx 0rpx rgba(160, 96, 10, 0.2),
                0rpx 1rpx 0rpx 0rpx rgba(255, 255, 255, 0.5);
  border-radius: 37rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 74rpx;
  font-weight: bold;
}

/*  */

.no {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no image {
  width: 300rpx;
  height: 311rpx;
  margin: 100rpx auto 30rpx;
}

.no text {
  font-size: 22rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 300;
  color: rgba(153, 153, 153, 1);
  text-align: center;
}
