/* pages/recharge/recharge.wxss */

page {
  background: #fff;
}

.recharge {
  padding-bottom: 100rpx;
}

.banner {
  width: 100%;
  height: 140rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  background: #ccc;
}

.recharge_box {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 40rpx 0 0 30rpx;
}

.card {
  width: 335rpx;
  height: 180rpx;
  margin: 0 20rpx 20rpx 0;
  border-radius: 12rpx;
  border: 2rpx solid rgba(230, 230, 230, 1);
  position: relative;
}

.card:nth-of-type(2n) {
  margin-right: 0;
}

.card.active {
  background: rgba(255, 249, 241, 1);
  border: 2rpx solid rgba(255, 180, 81, 1);
}

.card image.list {
  width: 335rpx;
  height: 180rpx;
  border-radius: 12rpx;
}

.card image.tag {
  position: absolute;
  width: 168rpx;
  height: 36rpx;
  top: -6rpx;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 99;
}


/* 课时 */

.remain {
  font-size: 30rpx;
  color: #333;
  margin: 0 auto;
  box-sizing: border-box;
  width: 690rpx;
  padding: 42rpx 30rpx 42rpx 56rpx;
  margin-top: 8rpx;
  border-bottom: 2rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.remain .name {
  position: relative;
}

.remain .name::before {
  display: block;
  content: '';
  width: 6rpx;
  height: 28rpx;
  border-radius: 3rpx;
  background: #ffb451;
  position: absolute;
  left: -26rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.remain .yue {
  color: #666;
}

.legend {
  padding-left: 71rpx;
  font-size: 24rpx;
  color: #999;
  /* margin-bottom: 160rpx; */
}

.legend .name {
  font-size: 30rpx;
  color: #333;
  margin: 42rpx 0 19rpx 15rpx;
  position: relative;
}

.legend .name::before {
  display: block;
  content: '';
  width: 6rpx;
  height: 28rpx;
  border-radius: 3rpx;
  background: #ffb451;
  position: absolute;
  left: -26rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.legend text {
  line-height: 30rpx;
}

/*  */

.bot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-top: 2rpx solid #e6e6e6;
}
.bot.isIpx{
  height: 166rpx;
  padding-bottom: 68rpx;
}

.bot .agreement {
  margin: 10rpx 0 6rpx 0;
  color: #999;
  font-size: 20rpx;
  /* padding-left: 31rpx; */
  position: relative;
  display: flex;
  align-items: center;
}

.bot .agreement .icon {
  display: flex;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
}

.bot .agreement image {
  display: block;
  width: 20rpx;
  height: 20rpx;
}

.bot .agreement .xy{
  height: 40rpx;
  line-height: 40rpx;
}

.bot .pay {
  color: #333;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.bot .pay .price {
  font-size: 36rpx;
  color: #f53636;
}

.bot .btn {
  width: 300rpx;
  height: 74rpx;
  line-height: 74rpx;
  background: linear-gradient(rgba(250, 195, 85, 1) 0%, rgba(250, 174, 75, 1) 100%);
  border-radius: 37rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  /* padding-top: 21rpx; */
  margin-top: 11rpx;
  /* 上内阴影 下内阴影 下外阴影*/
  box-shadow: 0px -2rpx 2rpx 0px rgba(160, 96, 10, 0.2) inset,
              0px 2rpx 2rpx 0px rgba(255, 255, 255, 0.5) inset,
              0px 4rpx 4rpx 0px rgba(230, 155, 69, 0.5);
}

.bot .btn.active{
  background: linear-gradient(rgba(163, 163, 163, 1) 0%, rgba(138, 138, 138, 1) 100%);
  box-shadow: 0px -2rpx 2rpx 0px rgba(160, 96, 10, 0.2) inset,
              0px 2rpx 2rpx 0px rgba(255, 255, 255, 0.5) inset,
              0px 4rpx 4rpx 0px rgba(138, 138, 138, 0.5);
}
