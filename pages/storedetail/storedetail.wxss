/* pages/storedetail/storedetail.wxss */
@import '../../style/cond.wxss';
page{
  overflow-x: scroll;
}


.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}

.info{
  background: #fff;
}
.info .location{
  display: flex;
  flex-direction: column;
  /* height: 128rpx; */
  padding: 30rpx 0rpx 20rpx 56rpx;
  position: relative;
  box-sizing: border-box;
  justify-content: center;
}
.info .location::before{
  position: absolute;
  display: block;
  content: '';
  width: 690rpx;
  height: 2rpx;
  background: #F2F2F2;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.location .top{
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.location .top .name{
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  position: relative;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  /* overflow: hidden; */
  line-height: normal;
}
.location .top .name::before{
  position: absolute;
  display: block;
  content: '';
  width: 6rpx;
  height: 34rpx;
  background: #FFB451;
  border-radius: 3rpx;
  bottom: 0;
  left: -26rpx;
  top: 0;
  margin: auto;
}
.location .top .distance{
  color: #666666;
  font-size: 24rpx;
  margin-left: 30rpx;
}

.location .bot{
  position: relative;
  font-size: 22rpx;
  color: #666666;
  padding-left: 38rpx;
  width: 80%;
  line-height: 1.2;
}
.location .bot image{
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.location .arrow{
  display: block;
  content: '';
  width: 17rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 58rpx;
  margin: auto;
}

.phone{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #333333;
  box-sizing: border-box;
  padding-left: 58rpx;
  position: relative;
}
.phone::before{
  position: absolute;
  display: block;
  content: '';
  width: 6rpx;
  height: 34rpx;
  background: #FFB451;
  border-radius: 3rpx;
  bottom: 0;
  left: 30rpx;
  top: 0;
  margin: auto;
}


.wrap.active{
  height: 160rpx;
  position: fixed;
  z-index: 99;
  top: 0;
}
.fill{
  width: 100%;
  height: 160rpx;
}

.weekList{
  width: 100%;
  height: 160rpx;
  white-space: nowrap; 
  box-shadow:0rpx 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
}
.week{
  width: 120rpx;
  height: 160rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.weekList .week:nth-of-type(2n){
  background: #fff;
}
.week:nth-of-type(2n+1){
  background: #F5F5F5;
}
.week .c1{
  font-size: 20rpx;
  color: #999999;
}
.week .c2{
  font-family: 'DIN Pro Cond';
  font-size: 54rpx;
  color: #333;
  margin: 20rpx 0 18rpx 0;
}
.week .cz{
  color: #FFB451;
  font-size: 20rpx;
}
.week .mk{
  color: #999999;
  font-size: 20rpx;
}
.week .no{
  color: #999;
  font-size: 20rpx;
}
.week cz{
  color: #FFB451;
  font-size: 20rpx;
}
.week .remain{
  color: #FFB451;
  font-size: 20rpx;
}
.week.active{
  background: #FFB451!important;
}
.week.active .c1,.week.active .c2,.week.active .cz,.week.active .mk,.week.active .no,.week.active .remain{
  color: #fff!important;
}

.img_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* padding-top: 36rpx; */
}
.img_box .box{
  position: relative;
  height: 276rpx;
  margin-bottom: 26rpx;
}
.img_box .box:last-of-type{
  margin-bottom: 0;
}
.img_box .box .img1{
  width: 690rpx;
  height: 276rpx;
  border-radius: 12rpx;
  /* background: #CDCDCD; */
}
.box .img2{
  position: absolute;
  left: 40rpx;
  top: -6rpx;
}
.img_box .box .img2 image{
  width: 196rpx;
  height: 42rpx;
}
.img_box .box .img2 text{
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  margin: auto;
  font-size:24rpx;
  font-family:NotoSansHans-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-shadow:0px 1rpx 1rpx rgba(0, 0, 0, 0.4);
}
.img_box .box .rese{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 160rpx;
  height: 50rpx;
}

.nothing{
  width: 100%;
  min-height: 520rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #B2B2B2;
  font-size: 28rpx;
}
.nothing image{
  width: 300rpx;
  height: 311rpx;
  margin: 0rpx auto 39rpx;
}

/*  */
.course {
  width: 690rpx;
  height: 270rpx;
  margin: 20rpx auto 0;
  background: #fff;
  box-sizing: border-box;
  padding: 0 0 0 20rpx;
  position: relative;
  border-radius: 12rpx;
}

.img_box .course:last-of-type{
  margin-bottom: 20rpx;
}

.course .head {
  display: flex;
  padding-bottom: 20rpx;
  position: relative;
}

.course .head::after {
  position: absolute;
  display: block;
  content: '';
  width: 650rpx;
  height: 2rpx;
  background: rgba(242, 242, 242, 1);
  left: 0;
  bottom: 0;
}

.course .cover {
  width: 200rpx;
  height: 140rpx;
  border-radius: 6rpx;
  margin: 20rpx 30rpx 0 0;
}

.course .middle {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.course .middle .name {
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
}

.course .middle .time {
  display: flex;
  align-items: center;
  margin: 19rpx 0 12rpx;
}

.course .middle .time image,
.course .middle .age image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 15rpx;
}

.course .middle .time .timedate {
  font-size: 24rpx;
  color: #666;
}

.course .middle .age {
  display: flex;
  align-items: center;
}

.course .middle .age .yearsold {
  font-size: 24rpx;
  color: #666;
}

.course .reserve {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.course .reserve .time {
  display: flex;
  align-items: center;
}

.course .reserve .time .name {
  font-size: 26rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.course .reserve .time .sj {
  font-size: 26rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.course .reserve .btn {
  width: 160rpx;
  height: 50rpx;
  background: rgba(255, 180, 81, 1);
  border: 2rpx solid rgba(255, 180, 81, 1);
  border-radius: 25rpx;
  line-height: 46rpx;
  box-sizing: border-box;
  padding: 0 0 0 39rpx;
  margin: 0 30rpx 0 auto;
  position: relative;
  color: #fff;
  font-size: 26rpx;
}

.course .reserve .btn::after {
  display: block;
  content: "";
  width: 0rpx;
  height: 0rpx;
  border-bottom: 8rpx solid rgba(255, 255, 255, 0);
  border-right: 8rpx solid rgba(255, 255, 255, 0);
  border-top: 8rpx solid rgba(255, 255, 255, 0);
  border-left: 8rpx solid #fff;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 26rpx;
  margin: auto;
  z-index: 99;
}

.course .icon {
  width: 160rpx;
  height: 32rpx;
  background: rgba(255, 237, 214, 1);
  border-radius: 0rpx 0rpx 12rpx 12rpx;
  position: absolute;
  top: 0;
  right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.course .icon image {
  width: 120rpx;
  height: 16rpx;
}
