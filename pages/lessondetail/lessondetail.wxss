/* pages/lessondetail/lessondetail.wxss */
@import '../../wxParse/wxParse.wxss';

.wxParse-img {
  /* margin-top:20rpx; */
  display: block;
  position: relative;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: auto;
}

.wxParse-p {
  text-indent: 2em;
  /* margin-top:20rpx; */
  color: #333;
  line-height: 50rpx;
  font-size: 26rpx;
  padding: 0 30rpx 30rpx;
  text-align: justify;
}

.wxParse-inline {
  font-size: 26rpx;
  color: #333;
}

.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.banner swiper {
  height: 300rpx;
}

.banner image {
  width: 750rpx;
  height: 300rpx;
}

.name {
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  background: #fff;
  height: 114rpx;
}

.name view {
  padding-left: 55rpx;
  font-weight: bold;
  position: relative;
  font-size: 36rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.name view::before {
  display: block;
  content: '';
  width: 6rpx;
  height: 34rpx;
  border-radius: 3rpx;
  background: #ffb451;
  position: absolute;
  left: 30rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.content {
  background: #fff;
  padding-bottom: 98rpx;
}

.btn {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 98rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 2rpx solid #e6e6e6;
  background: #fff;
}

.btn .friend {
  width: 300rpx;
  height: 74rpx;
  border-radius: 37rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 74rpx;
  box-sizing: border-box;
  /* padding-top:  21rpx; */
  margin: 0rpx 30rpx 0 0;
  background: linear-gradient(rgba(77, 214, 114, 1) 0%, rgba(49, 189, 91, 1) 100%);
  box-shadow: 0px -2rpx 2rpx 0px rgba(160, 96, 10, 0.2) inset,
                0px 2rpx 2rpx 0px rgba(255, 255, 255, 0.5) inset,
                0px 4rpx 4rpx 0px rgba(40, 142, 13, 0.5);
}
