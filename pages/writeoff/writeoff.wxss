/* pages/writeoff/writeoff.wxss */
@import '../../style/cond.wxss';
page{
  background: #fff;
  /* overflow: hidden; */
}
.writeoff{
  width: 100%;
}
.card_wrap{
  position: relative;
  overflow-x: hidden;
  padding-bottom: 37rpx;
}
.radius{
  width: 1200rpx;
  height: 280rpx;
  background: #FFB451;
  border-radius: 0 0 50% 50%;
  position: absolute;
  top: 0;
  left: -225rpx;
}
.card{
  width: 690rpx;
  height: 400rpx;
  position: relative;
  background: #fff;
  top: 37rpx;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20rpx;
  box-shadow:0px 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
}
.circle{
  position: absolute;
  width: 25rpx;
  height: 50rpx;
  border-radius: 50rpx 0 0 50rpx;
  background: #FFB451;
}
.circle1{
  left: 0;
  top: 115rpx;
  transform: rotate(180deg)
}
.circle2{
  right: 0;
  top: 115rpx;
}
.address{
  height: 150rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.address .arrow{
  position: absolute;
  right: 58rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 17rpx;
  height: 30rpx;
}
.address::after{
  display: block;
  content: '';
  width: 618rpx;
  height: 0rpx;
  border-bottom: 2rpx dashed #CCCCCC;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.address .name{
  display: flex;
  flex-direction: column;
  margin: 36rpx 0 0 59rpx;
}
.address .name view:nth-of-type(1){
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.address .name text{
  color: #666;
  font-size: 20rpx;
  margin-top: 20rpx;
  line-height: 23rpx;
  font-family:NotoSansHans-Light;
}
.address .lesson{
  width: 171rpx;
  height: 34rpx;
  border: 2rpx solid #31BD5B;
  border-right: none;
  border-radius: 17rpx 0 0 17rpx;
  color: #31BD5B;
  font-size: 22rpx;
  margin-top: 32rpx;
  text-align: center;
  line-height: 34rpx;
}
.card .infobot{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 250rpx;
  background:rgba(71,209,116,0.06);
  box-sizing: border-box;
  padding-top: 29rpx;
  border-radius: 0 0 20rpx 20rpx;
} 
.infobot .message{
  display: flex;
  justify-content: center;
  width: 100%;
}
.infobot .message .date{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  border-right: 2rpx solid #CCCCCC;
}
.infobot .message .mesa{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70rpx;
}
.infobot .message .wrap view:nth-of-type(1){
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.infobot .message .wrap view:nth-of-type(2){
  font-size: 20rpx;
  color: #666666;
}

/* 进度条 */
.progre{
  width: 570rpx;
  margin-top: 30rpx;
  position: relative;
}
.situation{
  font-size: 20rpx;
  color: #333333;
  font-weight: 400;
  margin-bottom: 30rpx;
}
.botinfo{
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 20rpx;
  color: #666;
  font-size: 20rpx;
  margin-top: 12rpx;
}
progress{
  position: relative;
}
.schedule{
  position: absolute;
  font-size: 20rpx;
  color: #31BD5B;
  bottom: 18rpx;
}

/* 上课宝宝 */
.baby .name{
  color: #333333;
  font-size: 30rpx;
  margin: 97rpx 0 16rpx 86rpx;
  position: relative;
}
.baby .name:before{
  display: block;
  content: '';
  width: 6rpx;
  height: 28rpx;
  border-radius: 3rpx;
  background: #FFB451;
  position: absolute;
  left: -26rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}
.list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 60rpx;
  width: 100%;
  height: 80rpx;
}
.list:nth-of-type(2n+1){
  background: #fff;
}
.list:nth-of-type(2n){
  background: #FAFAFA;
}
.list .left{
  display: flex;
  align-items: center;
}
.list .sort{
  width: 28rpx;
  height: 28rpx;
  margin-right: 27rpx;
}
.list .sort image{
  width: 28rpx;
  height: 28rpx;
}
.list .nick{
  color: #333333;
  font-size: 30rpx;
  font-weight: bold;
}
.list .status{
  font-size: 24rpx;
  color: #FFB451;
}
.list.yhx,.list .status.wqd{
  color: #333333;
  opacity: 0.5;
}
.list.yhx .status{
  color: #666;
}
.wrap.a{
  padding-bottom: 100rpx;
}


.btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 98rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 2rpx solid #E6E6E6;
  background: #fff;
}

.btn .friend{
  width: 300rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-radius: 37rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  box-sizing: border-box;
  /* padding-top:  21rpx; */
  margin: 0rpx 30rpx 0 0;
  background: linear-gradient(rgba(250, 195, 85, 1) 0%, rgba(250, 174, 75, 1) 100%);
  box-shadow: 0px -2rpx 2rpx 0px rgba(160, 96, 10, 0.2) inset,
                0px 2rpx 2rpx 0px rgba(255, 255, 255, 0.5) inset,
                0px 4rpx 4rpx 0px rgba(230, 155, 69, 0.5);
}


/* 待开班核销 */
.writeoff.dkb .infobot{
  background:rgba(255,180,81,0.08);
}
.writeoff.dkb .schedule{
  color: #FFB451;
}

/* 未开班核销 */
.writeoff.wkb .infobot{
  background:rgba(138,138,138,0.08);
}
.writeoff.wkb .schedule{
  color: #8A8A8A;
}