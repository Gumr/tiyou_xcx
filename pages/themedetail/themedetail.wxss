/* pages/themedetail/themedetail.wxss */
@import '../../wxParse/wxParse.wxss';

.wxParse-img {
  /* margin-top:20rpx; */
  display: block;
  position: relative;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.wxParse-p {
  text-indent: 2em;
  /* margin-top:20rpx; */
  color: #333;
  line-height: 50rpx;
  font-size: 26rpx;
  padding: 0 30rpx 30rpx;
  text-align: justify;
}

.wxParse-inline {
  font-size: 26rpx;
  color: #333;
}

/* view {
  overflow: initial;
